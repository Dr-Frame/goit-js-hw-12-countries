{{#each this}}
<div class="country">
  <h2 class="country-name">{{name}}</h2>
  <div class="country-wrapper">

    <div class="info-wrapper">

      <p class="country-capital"><span class="country-text">Capital:</span> {{capital}}</p>

      <p class="country-population"><span class="country-text">Population:</span> {{population}}</p>
      <ul class="country-lang"><span class="country-text">Languages:</span>
        {{#each languages}}
        <li class="country-lang-item">{{this.name}}</li>
        {{/each}}
      </ul>
    </div>
    <div class="img-wrapper">
      <img class="country-img" src="{{flag}}" alt="" width="500">
    </div>

  </div>


</div>
{{/each}}